Options:
    Project:     MakeNinja    # project name
    exe_type:    console      # [window | console | lib | dll]
    PCH:         pch.h        # "none" or name of header file to use for precompilation

    64Bit:       true         # generate scripts for 64-bit build
    TargetDir64: ../bin64     # 64-bit target directory
    32Bit:       true         # generate scripts for 32-bit build
    TargetDir32: ../bin32     # 32-bit target directory

    IncDirs:    ../ttLib/include;./   # clang needs the "./" to be able to find the pch.h file in modules in the .private/ directory
    LibDirs:    ../ttLib/lib
    BuildLibs:  ../ttLib           # libraries that need to be built (added to makefile generation)

    Natvis:     makeninja.natvis   # Specifies a .natvis file to link into the pdb file

Files:
    makeninja.rc

    addfiles.cpp
    bldmaster.cpp
    codelite.cpp
    convertdlg.cpp
