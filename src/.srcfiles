Options:
	Project: MakeNinja
	exe_type:	console		# [window | console | lib | dll]
	PCH: pch.h				# "none" or name of header file to use for precompilation
	64Bit:		true		# create 64-bit project in addition to 32-bit project
	bit_suffix: true		# add "64" to the end of the project name (e.g., MakeNinja64.exe)

	IncDirs: ../ttLib/include;../src		# ../src so that files in ../common can locate pch.h
	TargetDirs:	 ../bin; ../bin64
	BuildLibs: ../ttLib/lib/ttLib

Files:
	pch.cpp
	makeninja.rc

	bldmaster.cpp
	codelite.cpp
	createmakefile.cpp
	init.cpp
	makeninja.cpp
	ninja.cpp
	parsehhp.cpp
	vcxproj.cpp

	../common/csrcfiles.cpp
	../common/dryrun.cpp
	../common/options.cpp
